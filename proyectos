    <script>
        // Script para la funcionalidad del menú móvil
        const openMenuBtn = document.getElementById('menu-open-btn');
        const closeMenuBtn = document.getElementById('menu-close-btn');
        const mobileMenu = document.getElementById('mobile-menu');

        openMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.remove('hidden');
            mobileMenu.classList.add('flex');
        });

        closeMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
            mobileMenu.classList.remove('flex');
        });

        // Script para el modal de proyectos
        const projectCards = document.querySelectorAll('.project-card');
        const modal = document.getElementById('project-modal');
        const modalImg = document.getElementById('modal-img');
        const modalTitle = document.getElementById('modal-title');
        const modalClient = document.getElementById('modal-client');
        const modalDescription = document.getElementById('modal-description');
        const modalCloseBtn = document.getElementById('modal-close-btn');

        projectCards.forEach(card => {
            card.addEventListener('click', () => {
                // Obtener datos de la tarjeta clickeada
                const img = card.dataset.img; // Usamos el atributo data-img para el modal
                const title = card.dataset.title;
                const client = card.dataset.client;
                const description = card.dataset.description;

                // Poblar el modal con los datos
                modalImg.src = img;
                modalTitle.textContent = title;
                modalClient.textContent = client;
                modalDescription.textContent = description;

                // Mostrar el modal
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                setTimeout(() => {
                    modal.querySelector('.modal-content').classList.remove('scale-95');
                }, 50); // Pequeño delay para la animación
            });
        });

        // Función para cerrar el modal
        const closeModal = () => {
            modal.querySelector('.modal-content').classList.add('scale-95');
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }, 300); // Coincide con la duración de la transición
        };

        modalCloseBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            // Cerrar si se hace clic en el overlay de fondo
            if (e.target === modal) {
                closeModal();
            }
        });

    </script>

